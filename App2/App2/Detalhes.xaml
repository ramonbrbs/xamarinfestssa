<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Detalhes"
             Title="{Binding Titulo}"
             >
    
    <StackLayout>
        <Label Text="{Binding DataPublicacao}" FontSize="Small"></Label>
        <Label Text="{Binding Conteudo}" HorizontalOptions="CenterAndExpand" FontSize="Medium"></Label>
        <Button HorizontalOptions="Center" Text="Mais Informações" Clicked="Button_Clicked"></Button>
    </StackLayout>
</ContentPage>